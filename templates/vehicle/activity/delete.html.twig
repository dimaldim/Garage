{% extends 'base.html.twig' %}

{% block title %}- Изтриване на дейност на автомобил{% endblock %}

{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="{{ path('garage_dashboard') }}">Начало</a>
        </li>
        <li class="breadcrumb-item active">Изтриване на дейност на автомобил</li>
    </ol>
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <div class="card mx-auto mt-5">
        <div class="card-header">Изтриване на дейност на автомобил</div>
        <div class="card-body">
            {{ form_start(form) }}
            <div class="form-row mb-2">
                <div class="col-md-6">
                    {{ form_row(form.createdAt, {'attr': {'readonly':'readonly'}}) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.odometer, {'attr': {'readonly':'readonly'}}) }}
                </div>
            </div>
            <div class="form-row mb-2">
                <div class="col-md-12">
                    {{ form_row(form.activity, {'attr': {'readonly':'readonly'}}) }}
                </div>
            </div>
            <div class="form-row mb-2">
                <div class="col-md-6">
                    {{ form_row(form.work, {'attr': {'readonly':'readonly'}}) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.serviz, {'attr': {'readonly':'readonly'}}) }}
                </div>
            </div>
            <div class="form-row mb-2">
                <div class="col-md-6">
                    {{ form_row(form.parts, {'attr': {'readonly':'readonly'}}) }}
                </div>
                <div class="col-md-6">
                    {{ form_row(form.supplier, {'attr': {'readonly':'readonly'}}) }}
                </div>
            </div>
            <div class="form-row mb-2">
                <div class="col-md-12">
                    {{ form_row(form.description, {'attr': {'readonly':'readonly'}}) }}
                </div>
            </div>
            <div class="form-row mb-2">
                <div class="col-md-6 text-center">
                    <button class="btn btn-primary" type="submit">Изтрии</button>
                </div>
                <div class="col-md-6 text-center">
                    <a href="{{ path('garage_dashboard') }}" class="btn btn-danger">Откажи</a>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
