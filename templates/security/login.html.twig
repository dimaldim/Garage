{% extends 'base.html.twig' %}

{% block title %}- Вход{% endblock %}

{% block body %}
    <div class="card card-login mx-auto mt-5">
        <div class="card-header">Вход в системата</div>
        <div class="card-body">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <div class="form-group">
                    <label for="inputUsername">Потребител:</label>
                    <input type="text" id="inputUsername" name="username" class="form-control"
                           placeholder="Потребител" required="required" autofocus="autofocus">
                </div>
                <div class="form-group">
                    <label for="inputPassword">Парола:</label>
                    <input type="password" name="password" id="inputPassword" class="form-control"
                           placeholder="Парола" required="required">
                </div>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                <button class="btn btn-primary btn-block" type="submit">Вход</button>
            </form>
        </div>
    </div>
{% endblock %}
